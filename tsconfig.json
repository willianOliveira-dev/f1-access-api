{
  "compilerOptions": {
    "target": "ES2020",           // gera JS moderno, compatível com import/export
    "module": "ESNext",           // usa módulos ES6 (import/export)
    "moduleResolution": "node",   // resolve módulos no estilo Node.js
    "esModuleInterop": true,      // permite importar commonjs com default import (ex: express)
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",           // pasta onde vai o JS compilado
    "rootDir": "./src"            // pasta dos arquivos TS fontes
  },
  "include": ["src"],
  "exclude": ["dist"]
}
